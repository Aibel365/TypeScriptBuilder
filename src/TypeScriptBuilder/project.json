{
  "version": "0.1.4",
  "title": "TypeScript builder",
  "description": "Generates TypeScript type definition based on C# types",
  "authors": [ "Krzysztof Heim" ],
  "packOptions": {
    "repository": {
      "type": "git",
      "url": "https://github.com/pankleks/TypeScriptBuilder"
    }
  },

  "dependencies": {
    "NETStandard.Library": "1.6.0",
    "System.Reflection.TypeExtensions": "4.1.0"
  },

  "frameworks": {
    "netstandard1.6": {
      "imports": "dnxcore50"
    }
  },

  "scripts": {
    "postcompile": [
      "dotnet pack --no-build --configuration %compile:Configuration%"
    ]
  }
}
